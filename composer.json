{
    "name": "rudwolf/base-wp-repo",
    "description": "Composer package for initial WordPress project installation. Based on johnpbloch/wordpress-project.",
    "version": "0.1.0",
    "type": "project",
    "require": {
        "johnpbloch/wordpress": "5.*",
        "wpackagist-theme/twentyseventeen": "1.*",
        "wpackagist-plugin/formidable": "4.*",
        "koodimonni-language/core-pt_br": "*"
    },
    "require-dev": {},
    "extra": {
        "wordpress-install-dir": "public/wpanel",
        "dropin-paths": {
            "public/content/languages": ["vendor:koodimonni-language"],
            "public/content/languages/plugins/": ["vendor:koodimonni-plugin-language"],
            "public/content/languages/themes/": ["vendor:koodimonni-theme-language"]
        },
        "installer-paths": {
            "public/content/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "public/content/mu-plugins/{$name}": [
                "type:wordpress-muplugin"
            ],
            "public/content/themes/{$name}": [
                "type:wordpress-theme"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://wp-languages.github.io"
        }
    ]
}
